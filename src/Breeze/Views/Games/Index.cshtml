@model IEnumerable<Breeze.Models.Game>

    <html>
    <head>
        <title>Breeze Games!</title>
    </head>
    <body>
        <h2>Game List</h2>
        <h4>@Html.DisplayNameFor(model => model.Description)</h4>
        <ul>
            @foreach (var listGame in Model)
            {
                <li>@Html.DisplayFor(modelItem => listGame.Name) | @Html.ActionLink("Details", "Details", new { id = listGame.GameId }) | @Html.ActionLink("Edit", "Edit", new { id = listGame.GameId })</li>
                <li>
                    Delete @using (Html.BeginForm("Delete", "Games", new { id = listGame.GameId }))
                    {
                        <input type="submit" value="Delete" />
                    }
                </li>
            }
        </ul>
        <p>@Html.ActionLink("Add a new Game", "Create")</p>
    </body>
</html>
